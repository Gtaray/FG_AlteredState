<root>
    <windowclass name="charsheet_main" merge="join">
        <sheetdata>
            <!-- HP/HEARTS, ARMOR, DYING, etc -->
            <genericcontrol name="hearticon" merge="delete" /> <!-- Saving room by removing the graphic... -->
            <basicnumber name="hearts">
                <anchored to="defenseframe" position="insidetopleft" offset="46,22" width="40" height="24" merge="replace" />
            </basicnumber>
            <basicnumber name="hp">
                <anchored to="hearts" position="belowleft" offset="-26,16" width="40"  height="24" merge="replace" />
            </basicnumber>
            <basicnumber name="wounds">
                <anchored to="hp" position="right" offset="12,0" width="40" merge="replace" />
            </basicnumber>

            <genericcontrol name="armoricon">
                <anchored to="hearts" position="righthigh" offset="40,-12" width="64" height="79" merge="replace"/>  
            </genericcontrol>

            <!-- DYING TIMER -->
            <genericcontrol name="dyingicon">
                <anchored to="armor_base" position="righthigh" offset="20,0" width="54" height="62" merge="replace"/>
            </genericcontrol>
            <number_dyingbonus name="dyingbonus">
				<anchored to="dyingtimer" width="30" height="24" merge="replace">
                    <top>
						<parent>dyingicon</parent>
						<anchor>top</anchor>
						<offset>0</offset>
					</top>
					<left>
						<parent>dyingicon</parent>
						<anchor>right</anchor>
						<offset>10</offset>
					</left>
                </anchored>
			</number_dyingbonus>
			<number_dyingtimer name="dyingtimer">
				<anchored to="dyingicon" width="30" height="24" merge="replace">
                    <bottom>
						<parent>dyingicon</parent>
						<anchor>bottom</anchor>
						<offset>3</offset>
					</bottom>
					<left>
						<parent>dyingicon</parent>
						<anchor>right</anchor>
						<offset>10</offset>
					</left>
                </anchored>
			</number_dyingtimer>
            
            <button_herocoin name="button_herocoin">
				<anchored to="armoricon" position="right" offset="172,0" width="105" merge="replace" />
			</button_herocoin>

            <!-- EFFORT LABELS -->
            <!-- Not changing the underlying structure of the saved data (from effort.weapon.total to effort.augmented.total) -->
            <!-- The goal is to preserve character data as much as possible -->
            <string_chareffortlabel name="weapon_label">
				<static textres="AUGMENTED" />
			</string_chareffortlabel>
            <string_chareffortlabel name="magic_label">
				<static textres="GUN" />
			</string_chareffortlabel>

            <number_charefforttotal name="healing" source="effort.healing.total" insertbefore="ultimate">
				<anchored to="magic" />
				<target>healing</target>
                <die>d10</die>
			</number_charefforttotal>
            <string_chareffortlabel name="healing_label" insertbefore="ultimate">
				<anchored to="healing" />
				<static textres="HEALING" />
			</string_chareffortlabel>
            <number_chareffortbase name="healing_base" source="effort.healing.base" insertbefore="ultimate">
				<anchored to="healing" />
			</number_chareffortbase>
            <number_chareffortloot name="healing_loot" source="effort.healing.loot" insertbefore="ultimate">
				<anchored to="healing" />
			</number_chareffortloot>

            <number_charefforttotal name="ultimate" merge="join">
				<anchored to="healing" />
			</number_charefforttotal>

            <!-- SURGE and RAGE -->
            <number_surge name="surge" source="surge" insertbefore="skillframe">
                <anchored to="ultimate"/>
            </number_surge>
            <string_surgelabel name="surge_label" insertbefore="skillframe">
                <anchored to="surge" />
                <static textres="SURGE" />
            </string_surgelabel>

            <string_ragelabel name="rage_label">
                <anchored to="surge" />
                <static textres="RAGE" />
            </string_ragelabel>
            <number_rage name="rage" source="rage">
                <anchored to="rage_label" />
            </number_rage>
        </sheetdata>
    </windowclass>
</root>